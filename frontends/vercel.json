{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NEXT_PUBLIC_HEDERA_NETWORK": "@hedera_network",
    "NEXT_PUBLIC_CONTRACT_ID": "@contract_id", 
    "NEXT_PUBLIC_OPERATOR_ID": "@operator_id",
    "NEXT_PUBLIC_OPERATOR_KEY": "@operator_key",
    "NEXT_PUBLIC_TOKEN_ID": "@token_id",
    "NEXT_PUBLIC_MIRROR_NODE_URL": "@mirror_node_url",
    "NEXT_PUBLIC_APPKIT_PROJECT_ID": "@appkit_project_id",
    "NEXT_PUBLIC_APPKIT_ENVIRONMENT": "@appkit_environment"
  },
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  }
}